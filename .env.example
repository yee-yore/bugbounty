# STOMON Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# Telegram Notifications
# ============================================
# Enable Telegram alerts for vulnerability findings
TELEGRAM_ENABLED=false

# Your Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Your Telegram chat ID (get from @userinfobot)
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# ============================================
# OpenAI API Configuration
# ============================================
# Enable AI-powered false positive analysis
ENABLE_AI_ANALYSIS=false

# Your OpenAI API key
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Optional: Advanced Settings
# ============================================
# Log level (DEBUG, INFO, WARN, ERROR)
# LOG_LEVEL=INFO

# BadDNS timeout in seconds
# BADDNS_TIMEOUT=30

# Number of parallel workers for baddns
# BADDNS_WORKERS=1